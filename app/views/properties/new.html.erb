<%= form_for @property, :html => {:multipart => true} do |f| %>

	<%= f.label :title %>
	<%= f.text_field :title %>

	<%= f.label :address %>
	<%= f.text_field :address %>

	<%= f.label :postcode %>
	<%= f.text_field :postcode %>

	<%= f.label :city %>
	<%= f.text_field :city %>

	<%= f.label :total_rooms %>
	<%= f.number_field :total_rooms %>

	<%= f.label :description %>
	<%= f.text_field :description %>

	<ul>
		<%= f.fields_for :pictures do |pictures_form| %>
	     <li> <%= pictures_form.label :image %>
	      <%= pictures_form.file_field :image %>
	    </li>
	  <% end %>
	</ul>
	<%= f.submit "Submit" %> 

<% end %>